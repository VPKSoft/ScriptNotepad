  FILEPATH TEXT NOT NULL, -- the full path of the plug-in..
  PLUGIN_NAME TEXT NOT NULL, -- the name of the plug-in..
  PLUGIN_VERSION TEXT NOT NULL, -- the version of the plug-in..
  PLUGIN_DESCTIPTION TEXT NOT NULL, -- the description of the plug-in..
