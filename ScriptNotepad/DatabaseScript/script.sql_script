  APPLICATION_CRASHES INTEGER NOT NULL, -- a counter of how many times the plug-in has crashed the application..
  SORTORDER INTEGER NOT NULL, -- a sort order for the plug-in during the load process..
  RATING INTEGER NOT NULL, -- a rating for the plug-in (0-100)..
  PLUGIN_INSTALLED TEXT NOT NULL, -- when the plug-in was installed for to be used within the software, C# string format: yyyy-MM-dd HH':'mm':'ss.fff
  PLUGIN_UPDATED TEXT NOT NULL DEFAULT '0000-00-00 00:00:00.000' -- when the plug-in was updated, C# string format: yyyy-MM-dd HH':'mm':'ss.fff
